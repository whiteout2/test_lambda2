{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20",
                "-lfmt",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Remove",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Remove",
            "command": "rm -f ${fileDirname}/${fileBasenameNoExtension}"
        }
    ],
    "version": "2.0.0"
}